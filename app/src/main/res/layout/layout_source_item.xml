<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:layout_goneMarginLeft="8dp"
    app:cardElevation="8dp"
    tools:ignore="ExtraText">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/SourceNewsImage"
            android:src="@drawable/imageNewsSourceItem"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imageNews" />

        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="8"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:id="@+id/nameSourceNews"
            android:text="@string/nameNewsCompany"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>